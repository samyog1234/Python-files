AEHGJL JSFVGE
OAFK = 0
JGMFVK_HDSQWV = 0

OZADW FJMW:
    YMWKK = AFHML("QFLWJ LZW NSDMW GX VAUW (2, 12) GJ LQHW I LG IMAL LZW YSEW: ")
    AX YMWKK == "I":
        HJAFL("FZSFCQGM XGJ HDSQAFY")
        TJWSC
    LJQ:
        YMWKK = AFL(YMWKK)
        AX YMWKK < 2 GJ YMWKK > 12:
            HJAFL("UFNSDAV AFHML NSDMW, HDWSKW WFLWJ SYSAF.")
            UGFLAFMW
        
        JGDD_1 = JSFVGE.JSFVAFL(1, 6)
        JGDD_2 = JSFVGE.JSFVAFL(1, 6)
        JGDD = JGDD_1 + JGDD_2
        AX YMWKK == JGDD:
            HJAFL("OGFYJSLMDSLAGFK! KGM IAF!")
            OAFK += 1
        WDKW:
            HJAFL("EGJJQ, LZW LGLSD NSDMW GX LZW VAUW AK", JGDD)
        JGMFVK_HDSQWV += 1
    WPUWHL HSDMWQJJGJ:
        HJAFL("UFNSDAV AFHML NSDMW, HDWSKW WFLWJ SYSAF.")

AX JGMFVK_HDSQWV > 0:
    OAF_HWJUWFL = (OAFK / JGMFVK_HDSQWV) * 100
    HJAFL("KGM HDSQWV", JGMFVK_HDSQWV, "JGMFVK, QGM OGF", OAFK, "LAEWK. IAF HWJUWFLSYW AK", OAF_HWJUWFL, "%")
